<div class="wrapper">
  <div class="show">
    <div class="show-thumbnail">
      <%= link_to image_tag(@content.thumbnail), @content.url %>
    </div>
    <div class="show-title">
      <%= link_to @content.title.truncate(32), @content.url %>
    </div>
  </div>
  <% @contents.each do |content| %>
    <div class="recommend">
      <div class="rec-thumbnail">
        <%= link_to image_tag(content.thumbnail, :width => "100%", :height => "180"), content_path(content.id) %>
      </div>
      <div class="rec-title">
        <%= link_to content.title.truncate(30), content_path(content.id) %>
      </div>
    </div>
  <% end %>
</div>
