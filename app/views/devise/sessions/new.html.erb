<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => 'メールアドレス', :size => '15', :style => 'font-size:40px' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワード', :size => '15', :style => 'font-size:40px;' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label 'パスワードを保存する' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", :class=>"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
